 &nmlDist idist = 10, vtype(5) =.true., 0.0, 100.0, 100, rcutdist = 100.0 /
 &nmlGroup /
 &nmlStatic
  istatic = 1,
  lspdf =.true.,
 /
 &nmlSPDF vtype(1) =.true., 0.0, 1000.0, 500 /
 &nmlImage iimage = 1, lvrml =.true., lvtf = .true. /
